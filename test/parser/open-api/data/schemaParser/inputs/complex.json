{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "isRequired": {
      "oneOf": [
        { "type": "boolean" },
        { "type": "integer" }
      ]
    },
    "customAttributes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key",
          "value"
        ],
        "additionalProperties": {
          "type": "integer",
          "format": "int32"
        },
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "value": {
            "type": [
              "number",
              "integer",
              "string",
              "boolean"
            ]
          }
        }
      }
    }
  }
}
